<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >    
    <TextView
        android:id="@+id/title_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:gravity="center"
        android:text="***购票专区" 
        android:background="@android:color/holo_blue_light" />
    <TextView 
        android:layout_height="10dp"
        android:layout_width="match_parent"/>
    
    <ScrollView
        android:layout_width="match_parent"
	    android:layout_height="0sp"
	    android:layout_weight="1" >
    <LinearLayout 
        android:layout_width="match_parent"
 	   android:layout_height="match_parent"
 	   android:orientation="vertical">
    
    <LinearLayout 
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal"
    	android:paddingLeft="20dp" >	    
        <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="26dp"	       
	        android:text="您将搭乘   "/>  
	    <TextView 
	        android:id="@+id/date_txt"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_weight="2"
	        android:textColor="#00CED1"
	        android:textSize="30dp"
	        android:text="*  年    * 月  * 号"/>
	</LinearLayout>
	 <TextView 
        android:layout_height="5dp"
        android:layout_width="match_parent"/>
	 
	 <LinearLayout 
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal"
    	android:paddingLeft="20dp"
    	android:paddingRight="20dp" >	    
        <TextView 
	        android:id="@+id/go_txt"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="2"
	        android:textColor="#00CED1"
	        android:textSize="32dp"	        
	        android:text="起点"/>
        
         <LinearLayout 
	        android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:orientation="vertical"  >
		    <ImageView 
		        android:paddingTop="4sp"
		        android:paddingLeft="5sp"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:src="@drawable/jiantou"/>
		    <TextView 
		        android:id="@+id/fly_time_txt"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textColor="#9C9C9C"
		        android:textSize="18dp"
		        android:paddingLeft="10dp"
		        android:text="飞行时间"/>
		  </LinearLayout>
		      
	    <TextView 
	        android:id="@+id/get_txt"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="2"
	        android:textColor="#00CED1"
	        android:textSize="32dp"	
	        android:gravity="right"
	        android:text="终点"/> 
    </LinearLayout>
    <TextView 
        android:layout_height="5dp"
        android:layout_width="match_parent"/>
    
    <LinearLayout 
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal">
	    
        <TextView 
	        android:id="@+id/depart_airport_txt"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:textSize="24dp"
	        android:paddingLeft="20dp"
	        android:text="起飞机场"/>
        <TextView 
	        android:id="@+id/land_airport_txt"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:textSize="24dp"
	        android:gravity="right"
	        android:paddingRight="20dp"
	        android:text="降落机场"/>  
	 </LinearLayout> 
	<TextView 
	    android:layout_width="match_parent"
	    android:layout_height="30dp"/> 
	
	<LinearLayout 
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:paddingLeft="20dp"
    	android:paddingRight="20dp"
    	android:orientation="horizontal">
		<TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="24dp"	 
	        android:paddingRight="6dp"       
	        android:text="购票账户"/>
		<TextView
		    android:id="@+id/account_txt" 
		    android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="26dp"
	        android:textColor="#00CED1"
	        android:text="前界面传入"/>
	</LinearLayout>	
    <TextView 
	    android:layout_width="match_parent"
	    android:layout_height="10dp"/>
    
    <LinearLayout 
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:paddingLeft="20dp"
    	android:paddingRight="20dp"
    	android:orientation="horizontal">
		<TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="24dp"	        
	        android:text="乘机人姓名  "/>
		<EditText
		    android:id="@+id/passenger_edit" 
		    android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="24dp"	
	        android:hint="请输入乘客姓名"/>
	</LinearLayout>	
    <TextView 
	    android:layout_width="match_parent"
	    android:layout_height="5dp"/>
    
    <RadioGroup 
        android:id="@+id/types"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:checkedButton="@+id/man"		
        android:orientation="horizontal">
		<TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="24dp"	        
	        android:text="性别      "/>
        <RadioButton 
            android:id="@+id/man"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22dp"
            android:text="男"/>
        <TextView
        	android:layout_width="30dp"
        	android:layout_height="0dp"/>
        <RadioButton 
            android:id="@+id/woman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22dp"
           	android:text="女"/>
    </RadioGroup>
    <TextView 
	    android:layout_width="match_parent"
	    android:layout_height="5dp"/>
    
    <LinearLayout 
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:paddingLeft="20dp"
    	android:paddingRight="20dp"
    	android:orientation="horizontal">
		<TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="24dp"	        
	        android:text="出生日期    "/>
		<EditText
		    android:id="@+id/birthday_edit" 
		    android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="24dp"	
	        android:hint="乘机人的出生日期"/>
	</LinearLayout>	
    <TextView 
	    android:layout_width="match_parent"
	    android:layout_height="10dp"/>
    
    <LinearLayout 
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:paddingLeft="20dp"
    	android:paddingRight="20dp"
    	android:orientation="horizontal">
		<TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="24dp"	        
	        android:text="国籍    "/>
		<EditText
		    android:id="@+id/nation_edit" 
		    android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="24dp"	
	        android:hint="乘机人的国籍"/>
	</LinearLayout>	
    <TextView 
	    android:layout_width="match_parent"
	    android:layout_height="10dp"/>
    
    <LinearLayout 
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:paddingLeft="20dp"
    	android:paddingRight="20dp"
    	android:orientation="horizontal">
		<TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="24dp"	        
	        android:text="身份证/护照    "/>
		<EditText
		    android:id="@+id/idcard_edit" 
		    android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="24dp"	
	        android:hint="证件号码"/>
	</LinearLayout>	
    <TextView 
	    android:layout_width="match_parent"
	    android:layout_height="10dp"/>
    
    <LinearLayout 
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:paddingLeft="17dp"
    	android:paddingRight="20dp"
    	android:orientation="vertical">
		
		<CheckBox
		    android:id="@+id/yanwu"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textColor="#FFA500"
		    android:textSize="24dp"	
		    android:paddingRight="5dp"
		    android:text="延误险20￥ /份" />
		<CheckBox
		    android:id="@+id/yiwai"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textColor="#FFA500"
		    android:textSize="24dp"	
		    android:text="意外险30￥ /份" />
    </LinearLayout>
    <TextView 
	    android:layout_width="match_parent"
	    android:layout_height="20dp"/>
    
	<TextView 
	    android:id="@+id/serve_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:textSize="25dp"
        android:textColor="#ff0000"	        
        android:text="尊享头等舱礼遇        	      20kg行李额"/>
	<TextView 
	    android:layout_width="match_parent"
	    android:layout_height="15dp"/>

	</LinearLayout>
	</ScrollView>
 	   
	<LinearLayout 
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal">		
	    <TextView
	        android:id="@+id/total_price_txt"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="4"
	        android:textColor="#FF7F00"
	        android:textSize="24dp"
	        android:gravity="center"
	        android:text="总额"  />
	    <Button
	        android:id="@+id/submit"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="3"
	        android:textSize="24dp"
	        android:textColor="#ffffff"
	        android:background="@android:color/holo_orange_light" 
	        android:gravity="center"
	        android:text="提交订单" />
	</LinearLayout>	
	    
</LinearLayout>    
