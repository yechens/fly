<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="28dp"
        android:gravity="center"
        android:text="支付订单" 
        android:background="@android:color/holo_blue_dark"/>
    <TextView 
        android:layout_height="15dp"
        android:layout_width="match_parent"/>
    
    <LinearLayout 
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:paddingLeft="20dp"
    	android:paddingRight="20dp"
    	android:orientation="horizontal">
    	
        <TextView
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:textColor="#A8A8A8"
	        android:textSize="26dp"
	        android:gravity="left"
	        android:text="订单"  />
        <TextView
            android:id="@+id/tvorder"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="4"
	        android:gravity="right"
	        android:textColor="#A8A8A8"
	        android:textSize="26dp"
	        android:text="机票：***"  />    	
    </LinearLayout>
    <TextView 
        android:layout_height="15dp"
        android:layout_width="match_parent"/>
    
    <LinearLayout 
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:paddingLeft="20dp"
    	android:paddingRight="20dp"
    	android:orientation="horizontal">
    	
        <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="#A8A8A8"
        android:textSize="26dp"
        android:gravity="left"
        android:text="数量"  />
        <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="right"
        android:textColor="#A8A8A8"
        android:textSize="26dp"
        android:text="1张" />   	
    </LinearLayout>
    <TextView 
        android:layout_height="15dp"
        android:layout_width="match_parent"/>
    
    <LinearLayout 
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:paddingLeft="20dp"
    	android:paddingRight="20dp"
    	android:orientation="horizontal">
    	
        <TextView
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:textColor="#A8A8A8"
	        android:textSize="26dp"
	        android:gravity="left"
	        android:text="总计"  />
        <TextView
            android:id="@+id/tvmoney"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:gravity="right"
	        android:textColor="#A8A8A8"
	        android:textSize="26dp"
	        android:text="***元" />   	
    </LinearLayout>
    <TextView 
        android:layout_height="20dp"
        android:layout_width="match_parent"/>
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="26dp"
        android:gravity="center"
        android:text="选择支付方式" 
        android:background="#A8A8A8"/>
    <TextView 
        android:layout_height="25dp"
        android:layout_width="match_parent"/>
    
    <ScrollView
        android:layout_width="match_parent"
	    android:layout_height="0sp"
	    android:layout_weight="1" >
    <LinearLayout 
        android:layout_width="match_parent"
 	   android:layout_height="match_parent"
 	   android:orientation="vertical">
    
    <RadioGroup 
        android:id="@+id/payment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:checkedButton="@+id/qianbao"		
        android:orientation="vertical">
        <LinearLayout 
	        android:layout_width="match_parent"
	    	android:layout_height="wrap_content"	    	
	    	android:orientation="horizontal">
	        <ImageView
	        	android:layout_width="wrap_content"
	        	android:layout_height="wrap_content"
	        	android:src="@drawable/zfb"/>
	        <TextView
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:paddingTop="5dp"
		        android:textSize="27dp"
		        android:gravity="center"
		        android:text=" 支付宝支付" />   	
	        <RadioButton 
	            android:id="@+id/by_zfb"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textSize="22dp" />
	    </LinearLayout>
	    <TextView 
        	android:layout_height="40dp"
        	android:layout_width="match_parent"/>    
        
        <LinearLayout 
	        android:layout_width="match_parent"
	    	android:layout_height="wrap_content"	    	
	    	android:orientation="horizontal">
	        <ImageView
	        	android:layout_width="wrap_content"
	        	android:layout_height="wrap_content"
	        	android:src="@drawable/wechat"/>
	        <TextView
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:paddingTop="5dp"
		        android:textSize="27dp"
		        android:gravity="center"
		        android:text=" 微信支付" />   	
	        <RadioButton 
	            android:id="@+id/by_wechat"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textSize="22dp" />
	    </LinearLayout>
	    <TextView 
       	    android:layout_height="40dp"
        	android:layout_width="match_parent"/> 
	    
        <LinearLayout 
	        android:layout_width="match_parent"
	    	android:layout_height="wrap_content"	    	
	    	android:orientation="horizontal">
	        <ImageView
	        	android:layout_width="wrap_content"
	        	android:layout_height="wrap_content"
	        	android:src="@drawable/unionpay"/>
	        <TextView
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:paddingTop="5dp"
		        android:textSize="27dp"
		        android:gravity="center"
		        android:text=" 银联卡支付" />   	
	        <RadioButton 
	            android:id="@+id/by_unionpay"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textSize="22dp" />
	    </LinearLayout>
	    <TextView 
        	android:layout_height="40dp"
        	android:layout_width="match_parent"/>
	    
	    <LinearLayout 
	        android:layout_width="match_parent"
	    	android:layout_height="wrap_content"	    	
	    	android:orientation="horizontal">
	        <ImageView
	        	android:layout_width="wrap_content"
	        	android:layout_height="wrap_content"
	        	android:src="@drawable/qianbao"/>
	        <TextView
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:paddingTop="5dp"
		        android:textSize="27dp"
		        android:gravity="center"
		        android:text=" 账户余额支付" />   	
	        <RadioButton 
	            android:id="@+id/by_qianbao"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textSize="22dp" />
	    </LinearLayout>
	    <TextView 
        	android:layout_height="40dp"
        	android:layout_width="match_parent"/>   
    </RadioGroup>
    <TextView 
       	android:layout_height="20dp"
       	android:layout_width="match_parent"/>
    
    </LinearLayout>
    </ScrollView>
    
    <Button 
        android:id="@+id/pay_btn"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:textSize="27dp"
        android:textColor="#ffffff"
        android:gravity="center"
        android:text="确认支付"
        android:background="@android:color/holo_orange_light"/>
    <Button 
        android:id="@+id/back5"
        android:layout_width="match_parent"
        android:layout_height="22dp"
        android:textSize="17dp"
        android:textColor="#ffffff"
        android:gravity="center"
        android:text="取消支付"
        android:background="@android:color/darker_gray"/>
    
</LinearLayout>