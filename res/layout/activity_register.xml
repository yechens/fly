<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

     <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:gravity="center"
        android:text="欢迎新用户" 
        android:background="@android:color/holo_blue_dark"/>
     
     <ScrollView
        android:layout_width="match_parent"
	    android:layout_height="0sp"
	    android:layout_weight="1" >
     <LinearLayout 
        android:layout_width="match_parent"
 	   android:layout_height="match_parent"
 	   android:orientation="vertical">
 	      
     <TextView
	    android:layout_width="match_parent"
	    android:layout_height="15dp" />    
     <Button 
        android:id="@+id/tejia"
        android:background="@drawable/ad_reg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>  
     <TextView
	    android:layout_width="match_parent"
	    android:layout_height="20dp" />
     
     <LinearLayout 
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal">
	     <TextView	        
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:textColor="#00B2EE"
	        android:textSize="22dp"
	        android:gravity="center"
	        android:text="新的账户" />
	     <EditText 
	        android:id="@+id/new_act"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="2"
	        android:textSize="22dp"
	        android:gravity="center"
	        android:hint="请输入您的帐户名" />
	 </LinearLayout>
     <TextView
  		android:layout_width="match_parent"
  		android:layout_height="13dp" />
     
     <LinearLayout 
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal">
	     <TextView	        
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:textColor="#00B2EE"
	        android:textSize="22dp"
	        android:gravity="center"
	        android:text="新的密码" />
	     <EditText 
	        android:id="@+id/new_psd1"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="2"
	        android:textSize="22dp"
	        android:gravity="center"
	        android:inputType="textPassword"
	        android:hint="请输入您的密码" />
	 </LinearLayout>
     <TextView
  		android:layout_width="match_parent"
  		android:layout_height="13dp" />
     
     <LinearLayout 
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal">
	     <TextView
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:textColor="#EEEE00"
	        android:textSize="22dp"
	        android:gravity="center"
	        android:text="确认密码" />
	     <EditText 
	        android:id="@+id/new_psd2"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="2"
	        android:textSize="22dp"
	        android:gravity="center"
	        android:inputType="textPassword"
	        android:hint="请您再次确认密码" />
	 </LinearLayout>
     <TextView
  		android:layout_width="match_parent"
  		android:layout_height="18dp" />
     
     <LinearLayout 
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal">
	     <TextView
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:textColor="#00B2EE"
	        android:textSize="22sp"
	        android:gravity="center"
	        android:paddingRight="10dp"
	        android:paddingLeft="10dp"
	        android:text="您的性别" />
	     <RadioGroup 
	        android:id="@+id/type2"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:checkedButton="@+id/man"		
	        android:orientation="horizontal">
	        <RadioButton 
	            android:id="@+id/man"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="#00B2EE"
	            android:textSize="22dp"
	            android:text="Man"/>
	        <TextView
	        	android:layout_width="20sp"
	        	android:layout_height="0dp"/>
	        <RadioButton 
	            android:id="@+id/woman"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textSize="22sp"
	             android:textColor="#EEEE00"
	           	android:text="Woman"/>
    	 </RadioGroup>
    	 
	 </LinearLayout>
     <TextView
  		android:layout_width="match_parent"
  		android:layout_height="18sp" />
     
     <LinearLayout 
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal">
	     <TextView
	        android:layout_width="0sp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:textColor="#00B2EE"
	        android:textSize="22sp"
	        android:gravity="center"
	        android:inputType="phone" 
	        android:paddingLeft="10sp"   
	        android:paddingRight="10sp"
	        android:text="联系手机" />
	     <EditText 
	        android:id="@+id/phone"
	        android:layout_width="0sp"
	        android:layout_height="wrap_content"
	        android:layout_weight="2"
	        android:textSize="22sp"
	        android:gravity="center"
	        android:hint="请您输入手机号" />
	 </LinearLayout>
     <TextView
  		android:layout_width="match_parent"
  		android:layout_height="20sp" />
     
     <Button 
         android:id="@+id/ip"
         android:background="@drawable/ad_reg2"
         android:layout_width="wrap_content"
	     android:layout_height="wrap_content"
	     android:layout_gravity="center" />

     </LinearLayout>
     </ScrollView>
     
     <LinearLayout 
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal">
	     <Button 
	        android:id="@+id/register"
	        android:layout_width="0sp"
	        android:layout_gravity="center"
	        android:layout_weight="3"
	        android:textSize="26sp"
	        android:layout_height="40sp"
	        android:textColor="#ffffff"
	        android:background="@android:color/holo_orange_light"
	        android:text="确认注册"/>
	     <Button 
	        android:id="@+id/back"
	        android:layout_width="0sp"
	        android:layout_gravity="center"
	        android:layout_weight="1"
	        android:textSize="26sp"
	        android:layout_height="40sp"
	        android:textColor="#ffffff"
	        android:background="@android:color/darker_gray"
	        android:text="返回"/>    
	  </LinearLayout>       

</LinearLayout>
