<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout 
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal"
    	android:paddingLeft="20sp"
	    android:paddingRight="20sp" >
	    <ImageView 
	        android:id="@+id/fei"
	        android:layout_width="0sp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:src="@drawable/fei"/>
	    <TextView 
	        android:id="@+id/jp"
	        android:layout_width="0sp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:textSize="24sp"
	        android:paddingTop="10sp"
	        android:gravity="right"
	        android:text="机票"/>  	    
	    <TextView 
	        android:id="@+id/ycq"
	        android:layout_width="0sp"
	        android:layout_height="wrap_content"
	        android:layout_weight="3"
	        android:textSize="26sp"
	        android:paddingTop="10sp"
	        android:gravity="right"
	        android:textColor="#20B2AA"
	        android:text="已出票"/>  
    </LinearLayout>
    <TextView 
	    android:layout_width="match_parent"
	    android:layout_height="3sp"/>
    
     <LinearLayout 
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal" 
    	android:paddingLeft="20sp"
    	android:paddingRight="20sp"  >
	    
        <TextView 
	        android:id="@+id/tv_go"
	        android:layout_width="0sp"
	        android:layout_height="wrap_content"
	        android:layout_weight="2"
	        android:textColor="#009ACD"
	        android:textSize="30sp"	        
	        android:text="起点"/>  
	    <TextView 
	        android:id="@+id/xian1"
	        android:layout_width="0sp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:textColor="#9C9C9C"
	        android:textSize="23sp"
	        android:text="→"/>  
	    <TextView 
	        android:id="@+id/tv_get"
	        android:layout_width="0sp"
	        android:layout_height="wrap_content"
	        android:layout_weight="2"
	        android:textColor="#009ACD"
	        android:textSize="30sp"		
	        android:text="终点"/> 
	    <TextView 
	        android:id="@+id/tv_piaojia"
	        android:layout_width="0sp"
	        android:layout_height="wrap_content"
	        android:layout_weight="2"
	        android:textSize="24sp"
	        android:gravity="right"	       
	        android:text="价格"/> 
	</LinearLayout>
	<TextView 
	    android:layout_width="match_parent"
	    android:layout_height="7sp"/>
	
	<LinearLayout 
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal" 
    	android:paddingLeft="20sp"
    	android:paddingRight="20sp"  >
	    
        <TextView 
	        android:id="@+id/tv_date"
	        android:layout_width="0sp"
	        android:layout_height="wrap_content"
	        android:layout_weight="4"
	        android:textSize="24sp"	        
	        android:text="日期"/>  
	    <TextView 
	        android:id="@+id/tv_depart_time"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="2"	        
	        android:textSize="23sp"
	        android:text="起飞"/>  
	    <TextView 
	        android:id="@+id/xian2"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:textColor="#9C9C9C"	       
	        android:textSize="23sp"		
	        android:text="→"/> 
	    <TextView 
	        android:id="@+id/tv_land_time"
	        android:layout_width="0sp"
	        android:layout_height="wrap_content"
	        android:layout_weight="2"
	        android:textSize="23sp"
	        android:gravity="right"	       
	        android:text="到达"/> 
	</LinearLayout>
	<TextView 
	    android:layout_width="match_parent"
	    android:layout_height="7sp"/>
	
	<LinearLayout 
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal" 
    	android:paddingLeft="20sp"
    	android:paddingRight="20sp"  >
		<TextView 
	        android:id="@+id/tv_flight_num"
	        android:layout_width="0sp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:textSize="24sp"  
	        android:gravity="left"   
	        android:text="航班号"/>
		<TextView 
	        android:id="@+id/tv_order_num"
	        android:layout_width="0sp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:textSize="16sp"  
	        android:gravity="right"   
	        android:text="订单号"/>
	</LinearLayout>
	<TextView 
	    android:layout_width="match_parent"
	    android:layout_height="5sp"/> 

</LinearLayout>
