<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout 
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal">
	    <ImageView 
	        android:id="@+id/fei"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:paddingLeft="20dp"
	        android:paddingRight="20dp"
	        android:src="@drawable/fei"/>
	    
	    <TextView 
	        android:id="@+id/flight_num_txt"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="30dp"
	        android:paddingTop="7dp"
	        android:text="航班号"/>  
    </LinearLayout>
    <TextView 
	    android:layout_width="match_parent"
	    android:layout_height="8dp"/>  
	    
    <LinearLayout 
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal">
	    
        <TextView 
	        android:id="@+id/go_txt"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="4"
	        android:textColor="#009ACD"
	        android:textSize="30dp"
	        android:paddingLeft="20dp"
	        android:text="起点"/>  
	    <TextView 
	        android:id="@+id/jiantou"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="2"
	        android:textColor="#9C9C9C"
	        android:textSize="23dp"
	        android:text="——"/>  
	    <TextView 
	        android:id="@+id/get_txt"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="4"
	        android:textColor="#009ACD"
	        android:textSize="30dp"		
	        android:text="终点"/> 
	    <TextView 
	        android:id="@+id/date_txt"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="6"
	        android:textSize="26dp"
	        android:gravity="right"
	        android:paddingRight="20dp"
	        android:text="日期"/> 
	</LinearLayout>
	<TextView 
	    android:layout_width="match_parent"
	    android:layout_height="10dp"/>
	
	<LinearLayout 
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal">
	    
        <TextView 
	        android:id="@+id/depart_time_txt"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:textSize="20dp"
	        android:paddingLeft="20dp"
	        android:text="起飞时间"/>
        <TextView 
	        android:id="@+id/fly_time_txt"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:textSize="20dp"
	        android:paddingLeft="10dp"
	        android:gravity="center"
	        android:textColor="#919191"
	        android:text="飞行时间"/>  
	    <TextView 
	        android:id="@+id/land_time_txt"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:textSize="20dp"
	        android:paddingRight="20dp"
	        android:gravity="right"
	        android:text="到达时间"/>    
	 </LinearLayout>  
	 <TextView 
	    android:layout_width="match_parent"
	    android:layout_height="10dp"/>  
	    
	 <LinearLayout 
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal">
	    
        <TextView 
	        android:id="@+id/depart_airport_txt"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:textSize="20dp"
	        android:paddingLeft="20dp"
	        android:text="起飞机场"/>
        <TextView 
	        android:id="@+id/land_airport_txt"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:textSize="20dp"
	        android:gravity="right"
	        android:paddingRight="20dp"
	        android:text="降落机场"/>  
	 </LinearLayout> 
	<TextView 
	    android:layout_width="match_parent"
	    android:layout_height="8dp"/>       

</LinearLayout>
